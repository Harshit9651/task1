<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Users</title>
    <style>
        /* Add your CSS styles here */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
        }
        .user-list {
            list-style: none;
            padding: 0;
        }
        .user-item {
            border-bottom: 1px solid #ccc;
            padding: 10px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .user-item button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            margin-left: 10px;
        }
        .user-item button.edit {
            background-color: #ffc107;
        }
        .user-item button.delete {
            background-color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>User List</h1>
        <ul class="user-list">
            <!-- Loop through users and display each user -->
            <% users.forEach(user => { %>
                <li class="user-item">
                    <span><%= user.name %> - <%= user.email %> - <%= user.mobile %></span>
                    <div>
                        <button class="edit">Edit</button>
                        <button class="delete">Delete</button>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
